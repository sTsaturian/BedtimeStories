    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aesopCategory"
            style="@style/default_text_view_style"
            android:text="@string/aesop_s_fables" />

        <TextView
            android:id="@+id/grimmCategory"
            style="@style/default_text_view_style"
            android:text="@string/brothers_grimm_stories" />

        <TextView
            android:id="@+id/andersenCategory"
            style="@style/default_text_view_style"
            android:text="@string/hans_christian_andersen_s_stories" />

        <TextView
            android:id="@+id/animalsCategory"
            style="@style/default_text_view_style"
            android:text="@string/animal_stories" />

        <TextView
            android:id="@+id/kidsCategory"
            style="@style/default_text_view_style"
            android:text="@string/kid_stories" />


    </LinearLayout>
</ScrollView>