        <TextView
            android:id="@+id/religiousCategory"
            style="@style/default_text_view_style"
            android:text="@string/religious_stories" />

        <TextView
            android:id="@+id/soldierCategory"
            style="@style/default_text_view_style"
            android:text="@string/soldier_stories" />

        <TextView
            android:id="@+id/thoughtCategory"
            style="@style/default_text_view_style"
            android:text="@string/food_for_thought" />

    </LinearLayout>
</ScrollView>